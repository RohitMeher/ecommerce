<div class = "container">  
  
  <div class="d-flex align-items-center">
    <h4 style="color:#ef4867;">Add Product</h4>            
  </div>

  <div class="row align-items-center" style="padding-top:3%">
    <%= form_with model: @product, url: { action: "create" }, local: true, class: "col-6" do |form| %>
      <div class="form-group">
        <%= label :get, :title, 'Title' %>
        <%= text_field_tag 'product[title]', params[:title], class: "form-control", :required => true %>
      </div>

      <div class="form-group">
        <%= label :get, :code, 'Product Code' %>
        <%= text_field_tag 'product[code]', params[:code], class: "form-control", :required => true %>
      </div>

      <div class="form-group">
        <%= label :get, :quantity, 'Available Quantity' %> 
        <%= text_field_tag 'product[quantity]', params[:quantity], class: "form-control", :required => true %>
      </div>

      <div class="form-group">
        <%= label :get, :price, 'Price' %> 
        <%= text_field_tag 'product[price]', params[:price], class: "form-control", :required => true %>
      </div>

      <div class="form-group">
        <%= label :get, :description1, 'Description1' %>
        <%= text_field_tag 'product[description1]', params[:description1], class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label :get, :description2, 'Description2' %>
        <%= text_field_tag 'product[description2]', params[:description2], class: "form-control" %>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary float-right">Create Product</button>
        <a class="btn btn-primary" href = <%= products_path %>> Back </a>
      </div>
      
    <% end %>
  </div>

</div>