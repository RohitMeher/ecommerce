<div class="container" >
  <div class="row justify-content-center align-items-center" style="padding-top:7%">
    <%= form_with url:user_authenticate_path, local: true, class: "col-6" do |form| %>
      <div class="border bg-light" style="padding:7% 7% 7% 7%">
        <div class="form-group">
          <h3 class="font-weight-bold">Login</h3>
        </div>
        <div class="form-group">
          <%= label :post, :email, 'Email' %>
          <%= email_field :user, :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label :post, :password, 'Password' %>
          <%= password_field :user,:password, class: "form-control " %>
        </div>
        <div class="form-group">
          <%= link_to 'Create an Account', user_signup_path %>
          <%= form.submit 'Login', class: "btn btn-primary float-right"%>
        </div>
      </div>
    <% end %>
  </div>
</div>