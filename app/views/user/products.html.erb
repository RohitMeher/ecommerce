<div class = "container">
  <div class="d-flex align-items-left">
    <h2 style="color:#ef4867;">Products</h4>            
  </div>
  <div class ="row">
    <% @products.each do |product| %>
      <div class="col-sm-4 p-3">   
        <div class="card" style="width: 18rem;">
          <%= image_tag('product_logo.png', class: "card-img-top", alt: "Product images") %>
          <div class="card-body">
            <h5 class="card-title"><%= product.title %></h5>
            <p class="card-text">â‚¹<%= product.price %></p>
            <p class="card-text"><%= product.description1 %></p>
            <div class = "card-text">
              <%= form_with url: user_add_to_cart_path, method: :post, local: true do |form| %>
                <%= text_field(:add_to_cart, :quantity, value: 1)%>
                <%= hidden_field(:add_to_cart, :product_id, value: product.id, class: "m-1") %>
                <%= form.submit 'Add to Cart', class: "btn btn-primary m-1"%>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>